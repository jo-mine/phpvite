{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "Node10",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    //
    "outDir": "dist/",
    "baseUrl": "./",
    "paths": {
      "@ts/*": ["./ts/*"],
      "@sass/*": ["./sass/*"],
    }
  },
  "include": [
    "ts/**/*.ts",
    "ts/**/*.d.ts",
    "ts/**/*.tsx",
    "ts/**/*.vue",
    "types/**/*.d.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}